<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qb"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="270dp"
        android:layout_height="176dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toTopOf="@+id/shivaji"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/hstt" />

    <ImageView
        android:id="@+id/jyotiba"
        android:layout_width="384dp"
        android:layout_height="140dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="9dp"
        android:onClick="jytotiba_act"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/jyotiba" />

    <ImageView
        android:id="@+id/karmaveer"
        android:layout_width="384dp"
        android:layout_height="98dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:onClick="karmaveer_act"
        app:layout_constraintBottom_toTopOf="@+id/jyotiba"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/karmaveer" />

    <ImageView
        android:id="@+id/shivaji"
        android:layout_width="382dp"
        android:layout_height="110dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="17dp"
        android:onClick="shivaji_act"
        app:layout_constraintBottom_toTopOf="@+id/karmaveer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/shivaji2" />

</androidx.constraintlayout.widget.ConstraintLayout>